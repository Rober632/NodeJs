{{>header}}
{{>nav}}
{{>search}}

<a href="/add" class=" m-2 btn btn-primary float-end">ADD</a>
<a href="/deleteAll" class=" m-2 btn btn-danger float-end">Delete</a>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th> ID </th>
                <th> Title </th>
                <th> Content </th>
                <th> Status </th>
                <th> Date </th>
                <th> Options </th>
            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr>
                <td> {{id}} </td>
                <td style="min-width: 25%;"> {{title}} </td>
                <td> {{content}} </td>
                <td> {{status}} </td>
                <td> {{date}} </td>
                <td>
                    <a href="/show/{{id}}" class="btn btn-primary">Show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning">Edit</a>
                    <a href="/delete/{{id}}" class="btn btn-danger">Delete</a>
                    {{#if status}}
                    {{else}}
                    <a href="/activate/{{id}}" class="btn btn-secondary">Activate</a>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>